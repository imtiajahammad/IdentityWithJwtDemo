<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file  -->
    <!--target name="allfile" xsi:type="File"
            fileName="c:\Logs\nlog-all-${shortdate}.log"/-->
    <target name="allfile" xsi:type="File"
            fileName="E:\ASP.NETS\visualStudioPractises\IdentityWithJwtDemo\IdentityWithJwtDemo\Logs\nlog-all-${shortdate}.log"/>
    <target name="warningfile" xsi:type="File"
            fileName="E:\ASP.NETS\visualStudioPractises\IdentityWithJwtDemo\IdentityWithJwtDemo\Logs\nlog-WarningOnly-${shortdate}.log"/>
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="*" minlevel="Trace" writeTo="allfile" />
    <logger name="*" level="Warning" writeTo="warningfile" />
      <!--nlog documentation:https://github.com/nlog/NLog/wiki/Configuration-file-->
  </rules>
</nlog>